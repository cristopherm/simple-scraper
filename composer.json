{
    "name": "cristopherm/simple-scraper",
    "type": "library",
    "description": "A simple scraper for HTML pages in PHP",
    "keywords": [
        "cristopherm",
        "simple-scraper"
    ],
    "homepage": "https://github.com/cristopherm/simple-scraper",
    "license": "MIT",
    "authors": [
        {
            "name": "Cristopher Martins",
            "email": "cristopher.martins@gmail.com",
            "homepage": "https://github.com/cristopherm",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2",
        "guzzlehttp/guzzle": ">=6.3"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Cristopherm\\SimpleScraper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cristopherm\\SimpleScraper\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --colors",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
